FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
COPY packages/shared/package*.json ./packages/shared/
COPY apps/backend/package*.json ./apps/backend/

RUN npm ci

# Copy source code
COPY . .

# Build shared package
RUN npm run build:shared

WORKDIR /app/apps/backend

EXPOSE 3001

CMD ["npm", "run", "dev"]
